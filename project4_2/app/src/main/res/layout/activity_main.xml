<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="선택시작"
        android:textSize="20dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작함"
        android:textSize="20dp"
        android:id="@+id/chk"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아하는 동물을 선택하세요."
        android:textSize="20dp"
        android:id="@+id/txtpet"
        android:visibility="invisible"/>
    <RadioGroup android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고양이" android:checked="true"
            android:textSize="20dp"
            android:id="@+id/rdoCat"/>

        <RadioButton
            android:id="@+id/rdoCat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="냥이"
            android:textSize="20dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="늑대"
            android:textSize="20dp"
            android:id="@+id/rdoCat2"/>
    </RadioGroup>
    <Button android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="종료"
        android:id="@+id/btnOK"/>
    <ImageView android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cat"
        android:id="@+id/img"/>

</LinearLayout>